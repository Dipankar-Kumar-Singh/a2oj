---
import Layout from '../../layouts/Layout.astro';
import Settings from '../../components/Settings.astro';

export function getStaticPaths() {
	return [
		{ params: { id: '4' } },
		{ params: { id: '5' } },
		{ params: { id: '6' } },
		{ params: { id: '7' } },
		{ params: { id: '11' } },
		{ params: { id: '12' } },
		{ params: { id: '13' } },
		{ params: { id: '14' } },
		{ params: { id: '15' } },
		{ params: { id: '16' } },
