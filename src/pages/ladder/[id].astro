	{ id: 11, name: 'Panoramix\'s Prediction', contestId: 80, problemId: 'A', difficulty: 1, solved: false, tags: ['brute force', 'math'] },
	{ id: 12, name: 'Ultra-Fast Mathematician', contestId: 61, problemId: 'A', difficulty: 1, solved: false, tags: ['implementation'] },
