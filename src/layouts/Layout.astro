---
/**
 * Main layout component
 * Wraps all pages with common HTML structure, styles, and theme initialization
 */
import '../styles/global.css';
import { STORAGE_KEYS } from '../types';

interface Props {
	title: string;
}

const { title } = Astro.props;
const themeStorageKey = STORAGE_KEYS.THEME;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A2OJ Refreshed - Structured competitive programming practice ladders" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Preconnect to Google Fonts (keep these for faster connection) -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<!-- Load fonts asynchronously to prevent render blocking -->
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" media="print" onload="this.media='all'">
		<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"></noscript>
		<title>{title}</title>
		<!-- Initialize theme before page render to prevent flash -->
		<script is:inline define:vars={{ themeStorageKey }}>
			(function() {
				const theme = localStorage.getItem(themeStorageKey);
				if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
					document.documentElement.classList.add('dark');
				} else {
					document.documentElement.classList.remove('dark');
				}
			})();
		</script>
	</head>
	<body class="bg-slate-50 dark:bg-slate-950 text-slate-900 dark:text-slate-100">
		<slot />
	</body>
</html>

<style is:global>
	* {
		font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
	}
	
	code, pre {
		font-family: 'JetBrains Mono', 'SF Mono', Monaco, 'Cascadia Code', monospace;
	}
	
	html {
		scroll-behavior: smooth;
	}
	
	/* Reduce font weight variations to minimize download size */
	@supports (font-display: swap) {
		* {
			font-display: swap;
		}
	}

	/* Royal Premium Dark Mode - Deep Navy */
	html.dark {
		background: linear-gradient(180deg, #0f172a 0%, #0c1222 50%, #080d19 100%);
	}

	html.dark body {
		background: transparent;
	}
</style>

